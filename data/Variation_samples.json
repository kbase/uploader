{ "name": "Variation fastq",
  "interface": {
      "intro": {
	  "title": "Variation sample reads submission",
	  "text": "A Variation sample submission requires a single or a set of sequence files in fastq format and a filled out metadata Excel spreadsheet.",
	  "excel": true,
	  "json": false
      },
      "inputs": [ 
	  { 
	      "type": "dropdown",
	      "filetype": [ "xlsx" ],
	      "label": "select Variation metadata file",
	      "help": null,
	      "default": null,
	      "data": null,
	      "isMetadata": true,
	      "aweVariable": "METADATA"
	  },
	  {
              "type": "dropdown",
              "filetype": null,
              "label": "select Variation sequence file type",
              "help": null,
              "default": "fastq",
              "data": [ { "value": "fastq", "label": "fastq" },
                        { "value": "fq", "label": "fq" },
			{ "value": "gz", "label": "gz"}  ],
              "isMetadata": false,
              "aweVariable": "FILETYPE" 
	  },
	  { 
	      "type": "multiselect",
	      "filetype": [ "fastq", "fq" , "gz" ],
	      "label": "select sequence file(s)",
	      "help": null,
	      "default": null,
	      "data": null,
	      "isMetadata": false,
	      "aweVariable": "SEQUENCE"
	  }
      ]
  },
  "awe": {
      "tasks": [
	  {
	    "cmd": {
		  "args": "##FILETYPE## @##SEQUENCEFileName## @md_file ##SEQUENCE## ##SHOCK##/##SEQUENCE##",
		  "description": "validate sequence and generate the workspace document for upload to the workspace",
		  "name": "kb_create_variation_fastq.pl",
	  "environ": {"KB_AUTH_TOKEN":""}
	      },
	      "dependsOn":[],
	      "inputs": {
		"md_file": {
                      "host": "##SHOCK##",
                      "node": "##METADATA##"
                  }, 
		  "##SEQUENCEFileName##": {
		      "host": "##SHOCK##",
		      "node": "##SEQUENCE##"
		  }
	      },
              "outputs":{
		   "document.json":{
			"host": "##SHOCK##",
			"node": "-"
		    }
		},
	      "taskid": "0",
              "totalwork": 1
              },
	      {
		"cmd":{ 
			"args": "-type=KBaseGwasData.VariationSample -id=##SEQUENCEFileName## -data=@document.json -workspace=##WORKSPACE##",
                	"description": "create workspace object",
                	"name": "kb_create_ws_object.pl",
	  "environ": {"KB_AUTH_TOKEN":""}	    
	      	      },
	       "dependsOn": [ "0" ],
	       "inputs":{
			"document.json":{
				"host": "##SHOCK##",
				"node": "-",
				"origin": "0"
				}
	       },
		"taskid" : "1",
		"totalwork" : 1
		     }	
	 ]
	},
  	"metadata": {
      	"name": "VariationSampleMetaData",
      	"label": "KBase Variation Metadata Template",
      	"description": "Template to specify meta data for loading a sample reads FASTQ file to a KBaseGwasData.VariationSampleMetaData. typed object in a workspace",
     	 "cvs": {
          "domain": {
              "Bacteria":true,
              "Archaea":true,
              "Eukaryota":true,
              "Unknown":true
          }
      	},
      	  "groups" : {
          "BasicSampleInfo":{
	      "type": "list",
              "name":"BasicSampleInfo",
              "label":"BasicSampleInfo",
              "description":"Variation Sample Information",
              "mandatory": true,
              "toplevel":true,
	      "subgroups":{},
              "fields":{
		  "sample_name": {
                      "name":"sample_name",
                      "label":"Sample_Name",
                      "description":"Sample name of the Variation Sample",
                      "type":"text",
                      "default":"Unknown",
                      "mandatory":"true",
                      "validation": { "type":"none" },
                      "index": 0
                  },
		  "paired": {
                      "name":"paired",
                      "label":"Paired",
                      "description":"Paired-End or Single-End",
                      "type":"text",
                      "default":"Unknown",
                      "mandatory":"true",
                      "validation": { "type":"none" },
                      "index": 0
                  },
		  "platform": {
                      "name":"platform",
                      "label":"Platform",
                      "description":"Sequencing Platform",
                      "type":"text",
                      "default":"Unknown",
                      "mandatory":"false",
                      "validation": { "type":"none" },
                      "index": 0
                  },
		  "sample_id": {
                      "name":"sample_id",
                      "label":"Sample ID",
                      "description":"Sample Id of the Variation Sample",
                      "type":"text",
                      "default":"Unknown",
                      "mandatory":"true",
                      "validation": { "type":"none" },
                      "index": 0
                  },
	          "title": {
                      "name":"title",
                      "label":"Experimental Study",
                      "description":"Description about the Experiment",
                      "type":"text",
                      "default":"Unknown",
                      "mandatory":"true",
                      "validation": { "type":"none" },
                      "index": 0
                  }, 
		  "source_id": {
                      "name":"source_id",
                      "label":"Experiment ID",
                      "description":"Experiment ID for the study in the source database",
                      "type":"text",
                      "default":"",
                      "mandatory":"true",
                      "validation": { "type":"none" },
                      "index": 4
                  },
		  "source": {
                      "name":"source",
                      "label":"Source",
                      "description":"the original source location of the sample, e.g. NCBI",
                      "type":"text",
                      "default":"kbase",
                      "mandatory":"false",
                      "validation": { "type":"none" },
                      "index": 3
                  },
		  "ext_source_date": {
                      "name":"ext_source_date",
                      "label":"Submission Date",
                      "description":"Source Submission Date",
                      "type":"text",
                      "default":"Unknown",
                      "mandatory":"true",
                      "validation": { "type":"none" },
                      "index": 0
                  },
                  "domain": {
                      "name":"domain",
                      "label":"Domain",
                      "description":"the domain of the genome",
                      "type":"text",
                      "default":"Unknown",
                      "mandatory":"true",
                      "validation": { "type":"cv", "value":"domain" },
		      "index": 1
                  },
 		   "genome": {
                      "name":"genome",
                      "label":"Genome",
                      "description":"the scientific name of the genome",
                      "type":"text",
                      "default":"Unknown",
                      "mandatory":"true",
                      "validation": { "type":"none" },
                      "index": 0
                  },
                  "library": {
                      "name":"library",
                      "label":"Library",
                      "description":"Source Library Name ",
                      "type":"text",
                      "default":"Unknown",
                      "mandatory":"false",
                      "validation": { "type":"none" },
		      "index": 2
                  },
		  "assay": {
                      "name":"assay",
                      "label":"Assay",
                      "description":"Assay",
                      "type":"text",
                      "default":"Unknown",
                      "mandatory":"false",
                      "validation": { "type":"none" },
                      "index": 2
                  },
		 "read_count": {
                      "name":"read_count",
                      "label":"Read count",
                      "description":"Number of reads in the sample",
                      "type":"text",
                      "default":"Unknown",
                      "mandatory":"false",
                      "validation": { "type":"none" },
                      "index": 2
                  },
		"base_count": {
                      "name":"base_count",
                      "label":"Base count",
                      "description":"Base count of each read",
                      "type":"text",
                      "default":"Unknown",
                      "mandatory":"false",
                      "validation": { "type":"none" },
                      "index": 2
                  }
              }
          }
      }
  }
}
