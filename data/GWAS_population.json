{
  "name": "GWAS population",
  "interface": {
    "intro": {
      "title": " Gwas population data upload",
      "text": "Trait data submission requires a text file with details of individuals and filled out metadata Excel spreadsheet. The upload requires that the KBase Genome ID field in the metadata file is filled in correctly with an existing KBase Genome ID (eg. kb|g.3899).",
      "excel": true,
      "json": false
    },
    "inputs": [
      {
        "type": "dropdown",
        "filetype": [
          "xlsx"
        ],
        "label": "select GWAS Population metadata file",
        "help": null,
        "default": null,
        "data": null,
        "isMetadata": true,
        "aweVariable": "METADATA"
      },
      {	
        "type": "multiselect",
        "filetype": [
          "txt",
          "xls"
        ],
        "label": "select population data file",
        "help": null,
        "default": null,
        "data": null,
        "isMetadata": false,
        "aweVariable": "INPUTFILE"
      }
    ]
  },
  "awe": {
    "tasks": [
      {
        "cmd": {
          "args": "##WORKSPACEURL## ##WORKSPACE## @md_file @##INPUTFILEFileName## web",
          "description": "validate Trait data",
          "name": "gwas_create_GwasPopulation.pl",
	  "environ": {"KB_AUTH_TOKEN":""}
        },

         "dependsOn": [],
	      "inputs": {
		  "md_file": {
		      "host": "##SHOCK##",
		      "node": "##METADATA##"
		  },
		  "##INPUTFILEFileName##": {
		      "host": "##SHOCK##",
		      "node": "##INPUTFILE##"
		  }

              },
              "outputs": {
	      },
	      "taskid": "0",
	      "totalwork": 1
	  }
	 
               ]
  },
  "metadata": {
    "name": "KBaseGwasData.GwasPopulationTemplate",
    "label": "KBase GWAS Population  Template",
    "description": "Template to specify meta data for loading Population data to  KBaseGwasData.GwasPopulation typed object in a workspace",
    "cvs": {
      "domain": {
        "Bacteria": true,
        "Archaea": true,
        "Eukaryota": true,
        "Unknown": true
      }
    },
    "groups": {
      "BasicPopulationInfo": {
        "name": "BasicPopulationInfo",
        "label": "BasicPopulationInfo",
        "type": "list",
        "description": "Basic Population information",
        "mandatory": true,
        "toplevel": true,
        "subgroups": {},
        "fields": {
          "kbase_genome_id": {
            "name": "kbase_genome_id",
            "label": "KBase Genome ID",
            "description":"KBase ID of genome associated with the population",
            "type": "text",
            "default": "Unknown",
            "mandatory": "true",
            "validation": {
              "type": "None"
            }
          },
          "GwasPopulation_description": {
            "name": "GwasPopulation_description",
            "label": "Gwas Population description",
            "description": "Detailed description of the population data being uploaded",
            "type": "text",
            "default": "Unknown",
            "mandatory": "true",
            "validation": {
              "type": "none"
            }
          },
          "population_object_name": {
            "name": "population_object_name",
            "label": "Population Object name",
            "description": "Name with only alpha numeric characters and no spaces",
            "type": "text",
            "default": "Unknown",
            "mandatory": "true",
            "validation": {
              "type": "none"
            }
          },
          "originator": {
            "name": "originator",
            "label": "Originator",
            "description": "Lab or PI information",
            "type": "text",
            "default": "Unknown",
            "mandatory": "true",
            "validation": {
              "type": "none"
            }
          },
          "pubmed_id": {
            "name": "pubmed_id",
            "label": "Pubmed ID (For published data)",
            "description": "Pubmed ID",
            "type": "text",
            "default": "Unknown",
            "mandatory": "false",
            "validation": {
              "type": "none"
            }
          },
           "comments": {
            "name": "comments",
            "label": "Comments",
            "description": "Additional Comments",
            "type": "text",
            "default": "Unknown",
            "mandatory": "false",
            "validation": {
              "type": "none"
            }
          }
        }
      }
    }
  }
}
