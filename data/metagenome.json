	      "name": "project",
	      "label": "project",
	      "toplevel": true,
	      "mandatory": true,
	      "description": "project",
	      "fields": {
		  "project_name": {
		      "description": "project name",
		      "type": "string",
		      "mandatory": 1
		  },
		  "id": {
		      "description": "project id",
		      "type": "string",
		      "mandatory": false
		  },
		  "firstname": {
		      "description": "Technical contact first name",
