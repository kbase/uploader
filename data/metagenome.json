		      "mandatory": true
		  },
		  "PI_organization_url": {
		      "description": "Administrative contact organization url",
		      "type": "url",
		      "mandatory": false
		  },
		  "lastname": {
		      "description": "Technical contact last name",
		      "type": "text",
		      "mandatory": false
		  },
		  "organization_url": {
		      "description": "Technical contact organization url",
		      "type": "url",
		      "mandatory": false
		  },
		  "email": {
