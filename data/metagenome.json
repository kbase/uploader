{ "name": "MicrobialCommunities",
  "interface": {
      "intro": {
	  "title": "metagenome submission",
	  "text": "A metagenome submission requires a single or a set of sequence files in fasta or fastq format and a filled out metadata Excel spreadsheet. Sequence files can be demultiplexed before submission and you can join paired ends.",
	  "excel": true,
	  "json": false
      },
      "inputs": [
	  { 
	      "type": "dropdown",
	      "filetype": [ "xlsx" ],
	      "label": "select metagenome metadata file",
	      "help": null,
	      "default": "fasta",
	      "data": [ { "value": "fasta", "label": "fasta" },
			{ "value": "fna", "label": "fna" } ],
	      "isMetadata": true,
	      "aweVariable": "METADATA" },
	  { 
	      "type": "dropdown",
	      "filetype": null,
	      "label": "select sequence file type",
	      "help": null,
	      "default": "fasta",
	      "data": [ { "value": "fasta", "label": "fasta" },
			{ "value": "fna", "label": "fna" } ],
	      "isMetadata": false,
	      "aweVariable": "FILETYPE" },
	  { 
	      "type": "multiselect",
	      "filetype": [ "fasta", "fna" ],
	      "label": "select sequence file",
	      "help": null,
	      "default": null,
	      "data": null,
	      "isMetadata": false,
	      "aweVariable": "SEQUENCE" }
      ]
  },
  "awe": {
      "tasks": [
	  {
	      "cmd": {
		  "args": "##FILETYPE## @##SEQUENCEFileName## ##SEQUENCE## ##SHOCK##/##SEQUENCE##",
		  "description": "validate sequence and generate the workspace document for upload to the workspace",
                  "name": "kb_validate_file_and_generate_ws_doc.pl"
	      },
	      "dependsOn": [],
	      "inputs": {
		  "##SEQUENCEFileName##": {
		      "host": "##SHOCK##",
		      "node": "##SEQUENCE##"
		  }
              },
              "outputs": {
                  "document.json": {
		      "host": "##SHOCK##",
		      "node": "-"
		  }
	      },
	      "taskid": "0",
	      "totalwork": 1
	  },
	  {
	      "cmd": {
		  "args": "-type=Communities.DataHandle-1.0 -id=##SEQUENCEFileName## -data=@document.json -workspace=##WORKSPACE## -token=##TOKEN##",
		  "description": "create workspace object",
		  "name": "kb_create_ws_object.pl"
	      },
	      "dependsOn": [ "0" ],
              "inputs": {
                  "document.json": {
                      "host": "##SHOCK##",
                      "node": "-",
                      "origin": "0"
                  }
              },
	      "taskid": "1",
	      "totalwork": 1
	  }
      ]
  },
  "metadata": {
      "name": "MicrobialCommunitiesMetagenome",
      "label": "Microbial Communities Metagenome",
      "description": "Microbial Communities metagenome submission metadata template",
